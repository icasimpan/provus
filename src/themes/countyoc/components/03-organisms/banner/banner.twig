{{ attach_library('countyoc/bootstrap') }}
{{ attach_library('countyoc/banner') }}
<div class="carousel-wrapper">
  <div id="banner" class="banner carousel slide">
    <ol class="carousel-indicators">
      {% for item in items %}
        <li
          data-target="#banner" data-slide-to="{{ loop.index - 1 }}"
          class="indicator-item{{ loop.first ? ' active' : '' }}">
        </li>
      {% endfor %}
    </ol>
    <div class="carousel-inner">
      {% block content %}
        {% if link_url is not empty %}
          <a href="{{ link_url }}" title="{{ link_text }}">
        {% endif %}
        {% block image_items %}
          {% for item in items %}
            <div class="carousel-item item{{ loop.first ? ' active' : '' }}">
              {% include "@atoms/images/image/responsive-image.twig" with {
                output_image_tag: true,
                image_src: item.image_src,
                image_alt: item.image_alt,
                responsive_image_blockname: 'bg',
              } %}
            </div>
          {% endfor %}
        {% endblock %}
        <div class="mask"></div>
        <div class="carousel-caption">
          {% include "@atoms/images/image/responsive-image.twig" with {
            output_image_tag: true,
            image_src: logo_src,
            image_alt: logo_alt,
            responsive_image_blockname: 'logo',
          } %}
          <h2>{{ heading }}</h2>
          <p>{{ body }}</p>
        </div>
        {% if link_url is not empty %}
          </a>
        {% endif %}
      {% endblock %}
      {% block searchblock %}
        {% if settings.search %}
          <div class="search-input-item">
            {% block search__input %}
              {% include "@molecules/search-bar/search-input.twig" with
                {
                  search: settings.search,
                  search__placeholder: settings.search__placeholder,
                  search__button__text: settings.search__button__text,
                  search__button__url: settings.search__button__url,
                }
              %}
            {% endblock %}
          </div>
        {% endif %}
      {% endblock %}
    </div>
  </div>
  <div class="carousel-pause-play">
    <button id="pause-play" type="button" class="btn btn-default btn-xs">
      <i data-mode="play" class="material-icons">pause</i>
    </button>
  </div>
</div>
