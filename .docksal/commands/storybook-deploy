#!/usr/bin/env bash

## Deploy storybook to the oc-design.prometdev.com site. 
##
## Usage: fin init

echo "Copying storybook"
fin exec "cp -r ${PROJECTS_ROOT}${DOCROOT}/themes/custom/countyoc .; cd ${PROJECTS_ROOT}countyoc; yarn"
git checkout storybook
git reset --hard origin/storybook
git pull
echo "Building storybook"
fin exec "cd ${PROJECTS_ROOT}countyoc; yarn build-storybook -o ../storybook"
echo "Copying images"
fin exec "rm -rf ${PROJECTS_ROOT}storybook/images; cp -r ${PROJECTS_ROOT}countyoc/images ${PROJECTS_ROOT}storybook/images"
echo "Removing artifact"
fin exec "rm -rf ${PROJECTS_ROOT}countyoc"
echo "Adding to git"
git add storybook
git commit -m "Updates storybook"
git push origin storybook
